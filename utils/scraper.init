#!/bin/sh
# Starts and stops rpc.mountd
#

. /lib/lsb/init-functions

case "$1" in
start)

	start-stop-daemon --start -m -p /var/run/scrapy -c scrapy -d /srv/scrapy -b -a /srv/scrapy/scraper/utils/scrapyd
;;

stop)
	
	start-stop-daemon --stop -p /var/run/scrapy
;;
status)
	status_of_proc -p /var/run/scrapy scraper scraper && exit 0 || exit $?
;;
esac
